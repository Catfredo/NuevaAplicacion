<div class="container p-4">
    <div class="row">
        {{#each Notas}}
            <div class="col-md-3">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <p class="m-2">{{description}} </p>
                    <p>{{timeago Created_at}}</p>
                    <a href="links/delete/{{ID_Nota}}" class="btn btn-danger">Delete Note</a>
                    <a href="/links/edit/{{ID_Nota}}" class="btn btn-secondary">Edit</a>
            </div>
        {{else}}
        <div class="col-md4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay Notas guardadas</p>
                <a href="/links/add">Crear Nota</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>