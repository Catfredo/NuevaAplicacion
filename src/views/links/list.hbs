<div class="container p-4">
    <div class="row">
        {{#each Notas}}
            <div class="col-md-3">
                <div class="custom-card">
                    <h3 class="custom-card-title">
                        {{title}}
                    </h3>
                    <p class="custom-card-description">{{description}}</p>
                    <p class="custom-card-time">{{timeago Created_at}}</p>
                    <a href="links/delete/{{ID_Nota}}" class="custom-btn custom-btn-danger">Delete Note</a>
                    <a href="/links/edit/{{ID_Nota}}" class="custom-btn custom-btn-secondary">Edit</a>
                </div>
            </div>
        {{else}}
        <div class="col-md4 mx-auto">
            <div class="custom-card custom-text-center">
                <p>No hay Notas guardadas</p>
                <a href="/links/add" class="custom-btn">Crear Nota</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>