<div class="inicio">
    <h2>Tasks of {{user.username}}</h2>
</div>
<div class="container-main">
    <div class="row-list">
        {{#each Notas}}
        <div class="col-md-3">
            <div class="custom-card">
                <div class="container-custom-card">
                    <div class="checkbox-wrapper">
                        <input checked="" type="checkbox" class="check" id="check{{Id_task}}">
                        <label for="check{{Id_task}}" class="label">
                            <svg width="45" height="45" viewBox="0 0 95 95">
                                <rect x="30" y="20" width="50" height="50" stroke="black" fill="none"></rect>
                                <g transform="translate(0,-952.36222)">
                                    <path d="m 56,963 c -102,122 6,9 7,9 17,-5 -66,69 -38,52 122,-77 -7,14 18,4 29,-11 45,-43 23,-4" stroke="black" stroke-width="3" fill="none" class="path1"></path>
                                </g>
                            </svg>
                            <span>Checkbox</span>
                        </label>
                    </div>
                    <h3 class="custom-card-title">{{taskname}}</h3>
                    <img class="gif" src="/css/img/lista-de-verificacion.gif" alt="" data-action="/edit/{{Id_task}}" data-taskid="{{Id_task}}">
                </div>
                <p class="custom-card-description">{{body_task}}</p>
                <p class="custom-card-time">Due date: {{duedate}}</p>
                <p class="custom-card-time">{{timeago Created_at}}</p>
                <div class="btn-container">
                    <a href="links/delete/{{Id_task}}" class="custom-btn">Delete Task</a>
                </div>
                <div class="btn-container">
                    <a href="/links/edit/{{Id_task}}" class="custom-btn">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md4 mx-auto">
            <div class="custom-card custom-text-center">
                <h1 class="h1-list">No Tasks Yet</h1>
                <a href="/links/add" class="custom-btn">Create Task</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
